{
    "openapi": "3.0.0",
    "info": {
        "title": "Kefri API",
        "description": "Apis for Kefri sitematching module",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:5000/api/v1",
            "description": "Local development server"
        },
        {
            "url": "https://sitematching.herokuapp.com/api/v1",
            "description": "Development Server"
        }
    ],
    "paths": {
        "/users/login": {
            "post": {
                "tags": ["accounts"],
                "summary": "Authenticate account credentials and return a jwt token and user id",
                "operationId": "authenticate",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "sunday@owner.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "12345678yh"
                                    }
                                },
                                "required": ["email", "password"]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Accounts details and jwt token",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "userId": {
                                            "type": "string",
                                            "example": "fhfgjhf6765fghtyyhrt"
                                        },
                                        "token": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiI1ZWIxMmUxOTdlMDZhNzZjY2RlZmMxMjEiLCJpZCI6IjVlYjEyZTE5N2UwNmE3NmNjZGVmYzEyMSIsImlhdCI6MTU4ODc1ODE1N30.xR9H0STbFOpSkuGA9jHNZOJ6eS7umHHqKRhI807YT1Y"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Email or password is incorrect",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Email or password is incorrect"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/profile": {
            "get": {
                "tags": ["accounts"],
                "summary": "get user profile details",
                "description": "Returns a logged in user details",
                "operationId": "getprofile",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Details of the logged in user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "_id": {
                                            "type": "string",
                                            "example": "ebbjihuiyut6756789uiui"
                                        },
                                        "firstName": {
                                            "type": "string",
                                            "example": "oliseh"
                                        },
                                        "lastName": {
                                            "type": "string",
                                            "example": "mesisi"
                                        },
                                        "email": {
                                            "type": "string",
                                            "example": "lionel@messi.com"
                                        },
                                        "phoneNumber": {
                                            "type": "string",
                                            "example": "2547890754112"
                                        },
                                        "userId": {
                                            "type": "string",
                                            "example": "gkihfytfgbniyuuiou"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/locations/": {
            "post": {
                "tags": ["activity"],
                "summary": "Document a tree planting activity",
                "description": "Create a tree planting activity",
                "operationId": "createActivity",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "activities": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "Organisation(s)": {
                                                    "type": "string",
                                                    "example": "KFS"
                                                },
                                                "Date of planting": {
                                                    "type": "string",
                                                    "example": "7/4/2020"
                                                },
                                                "County": {
                                                    "type": "string",
                                                    "example": "kwale"
                                                },
                                                "Tree planting location": {
                                                    "type": "string",
                                                    "example": "Shimba Hills"
                                                },
                                                "Seedlings planted": {
                                                    "type": "number",
                                                    "example": 8000
                                                },
                                                "Hectares (Ha)- (Number of Trees planted divided by 1000)": {
                                                    "type": "number",
                                                    "example": 8
                                                },
                                                "Species planted": {
                                                    "type": "string",
                                                    "example": "Assorted"
                                                },
                                                "Latitude": {
                                                    "type": "number",
                                                    "example": -4.257125904
                                                },
                                                "Longitude": {
                                                    "type": "number",
                                                    "example": 39.38458059
                                                },
                                                "imageUrl": {
                                                    "type": "string",
                                                    "example": "https://www.sciencenewsforstudents.org/wp-content/uploads/2020/04/1030_LL_trees-1028x579.png"
                                                }
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "Organisation(s)",
                                    "Date of planting",
                                    "County",
                                    "Seedlings planted",
                                    "Tree planting location",
                                    "Hectares (Ha)- (Number of Trees planted divided by 1000)",
                                    "Species planted",
                                    "Latitude",
                                    "Longitude",
                                    "imageUrl"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The tree activity data successfullty returned",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "Organisation(s)": {
                                                "type": "string",
                                                "example": "KFS"
                                            },
                                            "Date of planting": {
                                                "type": "string",
                                                "example": "7/4/2020"
                                            },
                                            "County": {
                                                "type": "string",
                                                "example": "kwale"
                                            },
                                            "Tree planting location": {
                                                "type": "string",
                                                "example": "Shimba Hills"
                                            },
                                            "Seedlings planted": {
                                                "type": "number",
                                                "example": 8000
                                            },
                                            "Hectares (Ha)- (Number of Trees planted divided by 1000)": {
                                                "type": "number",
                                                "example": 8
                                            },
                                            "Species planted": {
                                                "type": "string",
                                                "example": "Assorted"
                                            },
                                            "Latitude": {
                                                "type": "number",
                                                "example": -4.257125904
                                            },
                                            "Longitude": {
                                                "type": "number",
                                                "example": 39.38458059
                                            },
                                            "isVerified": {
                                                "type": "boolean",
                                                "example": false
                                            },
                                            "survived": {
                                                "type": "number",
                                                "example": 0
                                            },
                                            "verifiedByUserID": {
                                                "type": "number",
                                                "example": 1
                                            },
                                            "verifiedBy": {
                                                "type": "string",
                                                "example": "sylvester odera"
                                            },
                                            "dateVerified": {
                                                "type": "string",
                                                "example": "2021-03-04T13:12:45"
                                            },
                                            "imageUrl": {
                                                "type": "string",
                                                "example": "https://www.sciencenewsforstudents.org/wp-content/uploads/2020/04/1030_LL_trees-1028x579.png"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": ["activity"],
                "summary": "Fetch all tree planting activities",
                "description": "Fetch all tree planting activities with multiple combinations, filtering and pagination coming soon..",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/TreesActivities"
                    }
                }
            }
        },
        "/locations/mine": {
            "get": {
                "tags": ["activity"],
                "parameters": [
                    {
                        "in": "query",
                        "name": "queryParams",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "limit": {
                                    "type": "integer",
                                    "example": 20
                                },
                                "page": {
                                    "type": "integer",
                                    "example": 2
                                }
                            }
                        },
                        "style": "form",
                        "explode": true
                    }
                ],
                "summary": "Get a list of trees activities by user id",
                "description": "Returns only the trees planted by a specific user",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "operationId": "getMyTrees",
                "responses": {
                    "200": {
                        "$ref": "#/components/responses/TreesActivities"
                    }
                }
            }
        },
        "/speciesToSite/": {
            "post": {
                "tags": ["speciesToSite"],
                "summary": "Create a sublocation with trees species",
                "description": "remember to insert coordinates longitude then latitude",
                "operationId": "createSpeciesToSite",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "mwihoko"
                                    },
                                    "longitude": {
                                        "type": "number",
                                        "example": 36.6588983433
                                    },
                                    "latitude": {
                                        "type": "number",
                                        "example": -1.20266883724
                                    },
                                    "species": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "name": {
                                                    "type": "string",
                                                    "example": "neem"
                                                }
                                            }
                                        }
                                    }
                                },
                                "required": [
                                    "name",
                                    "longitude",
                                    "latitude",
                                    "species"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The location and coordinates and tree species. The coordinates first item will be longitude then latitude",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "_id": {
                                            "type": "string",
                                            "example": "603c0879d5413d00170d879b"
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "mwihoko"
                                        },
                                        "location": {
                                            "type": "object",
                                            "properties": {
                                                "coordinates": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "number",
                                                        "example": 38.875689768957
                                                    }
                                                },
                                                "type": {
                                                    "type": "string",
                                                    "example": "Point"
                                                }
                                            }
                                        },
                                        "species": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "name": {
                                                        "type": "string",
                                                        "example": "neem"
                                                    },
                                                    "_id": {
                                                        "type": "string",
                                                        "example": "603c0879d5413d00170d879b"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/speciesToSite/getSpecies/": {
            "post": {
                "tags": ["speciesToSite"],
                "summary": "find tree species near you",
                "description": "user can pass coordinates in the format[long,lat] and max distance to get the trees near them. Pass both the longtiude and latitude to the cordinates array",
                "operationId": "getSpeciesToSite",
                "security": [
                    {
                        "bearerAuth": []
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "maxDistance": {
                                        "type": "number",
                                        "example": 1000
                                    },
                                    "longitude": {
                                        "type": "number",
                                        "example": 36.6588983433
                                    },
                                    "latitude": {
                                        "type": "number",
                                        "example": -1.20266883724
                                    }
                                },
                                "required": [
                                    "maxDistance",
                                    "longitude",
                                    "latitude"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Array containing the trees and locations near you",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "_id": {
                                                "type": "string",
                                                "example": "603c0879d5413d00170d879b"
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "mwihoko"
                                            },
                                            "location": {
                                                "type": "object",
                                                "properties": {
                                                    "coordinates": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "number",
                                                            "example": 38.875689768957
                                                        }
                                                    },
                                                    "type": {
                                                        "type": "string",
                                                        "example": "Point"
                                                    }
                                                }
                                            },
                                            "species": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object",
                                                    "properties": {
                                                        "name": {
                                                            "type": "string",
                                                            "example": "neem"
                                                        },
                                                        "_id": {
                                                            "type": "string",
                                                            "example": "603c0879d5413d00170d879b"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "responses": {
            "TreesActivities": {
                "description": "Returns an array of tree planting activities",
                "content": {
                    "application/json": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "itemCount": {
                                    "type": "integer",
                                    "example": 0
                                },
                                "limit": {
                                    "type": "integer",
                                    "example": 20
                                },
                                "totalPages": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "page": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "pagingCounter": {
                                    "type": "integer",
                                    "example": 21
                                },
                                "hasPrevPage": {
                                    "type": "boolean",
                                    "example": true
                                },
                                "hasNextPage": {
                                    "type": "boolean",
                                    "example": false
                                },
                                "prevPage": {
                                    "type": "integer",
                                    "example": 1
                                },
                                "nexPage": {
                                    "type": "boolean",
                                    "example": null
                                },
                                "activities": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "Organisation(s)": {
                                                "type": "string",
                                                "example": "KFS"
                                            },
                                            "Date of planting": {
                                                "type": "string",
                                                "example": "7/4/2020"
                                            },
                                            "County": {
                                                "type": "string",
                                                "example": "kwale"
                                            },
                                            "Tree planting location": {
                                                "type": "string",
                                                "example": "Shimba Hills"
                                            },
                                            "Seedlings planted": {
                                                "type": "number",
                                                "example": 8000
                                            },
                                            "Hectares (Ha)- (Number of Trees planted divided by 1000)": {
                                                "type": "number",
                                                "example": 8
                                            },
                                            "Species planted": {
                                                "type": "string",
                                                "example": "Assorted"
                                            },
                                            "Latitude": {
                                                "type": "number",
                                                "example": -4.257125904
                                            },
                                            "Longitude": {
                                                "type": "number",
                                                "example": 39.38458059
                                            },
                                            "isVerified": {
                                                "type": "boolean",
                                                "example": false
                                            },
                                            "survived": {
                                                "type": "number",
                                                "example": 0
                                            },
                                            "verifiedByUserID": {
                                                "type": "number",
                                                "example": 1
                                            },
                                            "verifiedBy": {
                                                "type": "string",
                                                "example": "sylvester odera"
                                            },
                                            "dateVerified": {
                                                "type": "string",
                                                "example": "2021-03-04T13:12:45"
                                            },
                                            "imageUrl": {
                                                "type": "string",
                                                "example": "https://www.sciencenewsforstudents.org/wp-content/uploads/2020/04/1030_LL_trees-1028x579.png"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
